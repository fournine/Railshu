<h1>Lista Fatture</h1>

<table class="invoice">
  <tr>
    <th>Num. Fattura</th>
    <th>Data fattura</th>
    <th>Cliente</th>
    <th colspan="3">Descrizione</th>
  </tr>

<% @invoices.each do |invoice| %>
  <tr>
    <td><%= link_to invoice.codice, invoice %></td>
    <td><%=h invoice.data_fattura.strftime("%d/%m/%Y") %></td>
    <td><%=h invoice.customer.intestazione %></td>
    <td><%=h invoice.descrizione %></td>
    <td><%= link_to (image_tag "edit.png", {:alt => 'Modifica Fattura', :class=>'noborder'}), edit_invoice_path(invoice) %></td>
    <td><%= link_to (image_tag "delete.gif", {:alt => 'Elimina Fattura', :class=>'noborder'}), invoice, :confirm => 'Sei sicuro di voler eliminare la fattura??', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuova Fattura', new_invoice_path, :class=>"commandbutton" %>