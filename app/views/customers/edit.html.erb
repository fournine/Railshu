<h1>Modifica dati Cliente</h1>

<% form_for(@customer) do |f| %>
  <%= f.error_messages %>

<table class="insert">
<tr>
  <td colspan="2">
    <%= f.label :ragione_sociale %>
    <%= f.text_field :ragione_sociale %>
  </td>
  <td>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </td>
  <td>
    <%= f.label :cognome %><br />
    <%= f.text_field :cognome %>
  </td>
  </tr>
  <tr>
  <td  colspan="2">
    Partita Iva<br />
    <%= f.text_field :p_iva %>
  </td>
  <td colspan="2">
    Codice Fiscale<br />
    <%= f.text_field :cod_fisc %>
  </td>
  </tr>
  <tr>
  <td colspan="2">
    <%= f.label :indirizzo %><br />
    <%= f.text_field :indirizzo %>
  </td>
  <td>
    <%= f.label :comune %><br />
    <%= f.text_field :comune %>
  </td>
  <td>
    <%= f.label :cap %><br />
    <%= f.text_field :cap %>
  </td>
  </tr>
  </table>
  <p>
  <p>
    <%= f.submit 'Aggiorna Dati Cliente' %>
  </p>
<% end %>

<%= link_to 'Torna alla lista Clienti', customers_path, :class=>"commandbutton" %>